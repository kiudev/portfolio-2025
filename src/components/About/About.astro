---
import "./about.css";
import Timeline from "./components/Timeline.astro";

const {
  heading,
  firstParagraph,
  secondParagraph,
  thirdParagraph,
  description
} = Astro.props;
---

<div id="about">
  <h2 class="about__first-heading">{heading}</h2>

  <section class="about__container">
    <div class="about__text">
      <p>
        {firstParagraph}
      </p>
      <p>
        {secondParagraph}
      </p>
      <p>
        {thirdParagraph}
      </p>
    </div>
  </section>

  <Timeline description={description} />
</div>

<script>
  import { scrollAnimations } from "../../utils/scrollAnimations";

  scrollAnimations({
    animations: [
      {
        targetSelector: ".about__text",
        animationProps: {
          backgroundColor: "var(--glass-color-100)",
        },
        duration: 0.3,
        reverseAnimationProps: { backgroundColor: "var(--glass-color-900)" },
        reverseDuration: 0.3,
      },
    ],
  });
</script>
