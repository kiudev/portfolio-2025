---
import { projectsIcons } from "../icons/icons";

interface CardProps {
  title: string;
  image: string;
  tags: string[];
  link: string;
}

const { title, image, tags, link } = Astro.props as CardProps;
---

<a href={link} class="card__link" target="_blank">
  <li class="projects__card card">
    <div class="card__header">
      <h3 class="card__title">{title}</h3>
      <span set:html={projectsIcons.linkIcon}></span>
    </div>

    <ul class="card__tags">
      {tags && tags.map((tag) => <li class="card__tag">{tag}</li>)}
    </ul>
  </li>
  <img class="card__image" src={image} alt="" />
</a>
