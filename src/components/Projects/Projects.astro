---
import "./projects.css";
import Card from "./components/Card.astro";

const { heading } = Astro.props;
---

<section id="projects">
  <h2 class="projects__heading">{heading}</h2>
  <hr class="projects__hr">
  <ul class="projects__group">
    <Card
      title="WebPix"
      image="/screely-1738234351139.png"
      tags={["React", "TypeScript", "Tailwind"]}
    />

    <Card
      title="WebPix"
      image="/screely-1738234351139.png"
      tags={["React", "TypeScript", "Tailwind"]}
    />
  </ul>
</section>

<script>
  import { scrollAnimations } from "../../utils/scrollAnimations";

  scrollAnimations({
    animations: [
      {
        targetSelector: ".card__tag",
        animationProps: {
          backgroundColor: "var(--glass-color-100)",
        },
        duration: 0.3,
        reverseAnimationProps: { backgroundColor: "var(--glass-color-900)" },
        reverseDuration: 0.3,
      },
      {
        targetSelector: ".projects__hr",
        animationProps: {
          border: "1px solid var(--neutral-color-100)",
        },
        duration: 0.3,
        reverseAnimationProps: {
          border: "1px solid var(--neutral-color-900)",
         },
        reverseDuration: 0.3,
      },
    ],
  });
</script>
