---
import "./form.css";

const { heading, email, subject, message, send } = Astro.props;
---

<section id="contact">
  <h2 class="contact__heading">{heading}</h2>

  <form
    class="contact__form"
    action="https://api.web3forms.com/submit"
    method="post"
  >
    <input
      type="hidden"
      name="access_key"
      value="0085b51f-0c31-442d-8a6e-a4010ed92634"
    />

    <label for="email">{email}</label>
    <input name="email" type="text" />

    <label for="subject">{subject}</label>
    <input type="text" name="subject" id="" />

    <label for="message">{message}</label>
    <textarea name="message" cols="30" rows="10"></textarea>

    <input
      type="hidden"
      name="redirect"
      value="https://web3forms.com/success"
    />

    <input type="submit" value={send} />
  </form>
</section>

<script>
  import { scrollAnimations } from "../../utils/scrollAnimations";

  scrollAnimations({
    animations: [
      {
        targetSelector: ".contact__form",
        animationProps: {
          backgroundColor: "var(--glass-color-100)",
        },
        duration: 0.3,
        reverseAnimationProps: { backgroundColor: "var(--glass-color-900)" },
        reverseDuration: 0.3,
      },
    ],
  });
</script>
